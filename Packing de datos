/*Ojo que se está usando la logica: mes/día/año*/
//================================================================================
#include <iostream>
using namespace std;
int main() {
    int dia, mes, anio;
    cout << "Ingrese el día (1 a 31): ";
    cin >> dia;
    cout << "Ingrese el mes (1 a 12): ";
    cin >> mes;
    cout << "Ingrese el año (0 a 99): ";
    cin >> anio;
    if (dia < 1 || dia > 31 || mes < 1 || mes > 12 || anio < 0 || anio > 99) {
        cout << "Fecha inválida." << endl;
        return 1;
    }
    int resultado = (mes << 12) | (dia << 7) | anio;
    cout << "Resultado hexadecimal: ";
    cout << hex << uppercase;
    cout << resultado << endl;
    return 0;
}
